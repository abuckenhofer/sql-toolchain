# .sqlfluff
[sqlfluff]
dialect = oracle
templater = jinja
max_line_length = 120

[sqlfluff:rules]
# Beispiel für häufig genutzte, zentrale Regeln (projektweit)
single_table_references = consistent
unquoted_identifiers_policy = all

[sqlfluff:rules:capitalisation.keywords]
capitalisation_policy = upper
